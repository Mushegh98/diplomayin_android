<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="2500">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/username"
            motion:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/guideline2"
            motion:layout_constraintTop_toTopOf="@+id/guideline1"
            motion:layout_constraintStart_toStartOf="@+id/guideline9"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0" />
        <Constraint
            android:id="@+id/password"
            motion:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/guideline4"
            motion:layout_constraintTop_toTopOf="@+id/guideline3"
            motion:layout_constraintStart_toStartOf="@+id/guideline9"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0" />
        <Constraint
            android:id="@+id/signIn"
            motion:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/guideline6"
            motion:layout_constraintTop_toTopOf="@+id/guideline5"
            motion:layout_constraintStart_toStartOf="@+id/guideline9"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0" />
        <Constraint
            android:id="@+id/relativeLayout"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/guideline6"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0" />
        <Constraint
            android:id="@+id/email"
            motion:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/guideline2"
            motion:layout_constraintTop_toTopOf="@+id/guideline1"
            motion:layout_constraintStart_toStartOf="@+id/guideline9"
            android:scaleX="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/username"
            motion:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/guideline2"
            motion:layout_constraintTop_toTopOf="@+id/guideline1"
            motion:layout_constraintStart_toStartOf="@+id/guideline9"
            android:scaleX="1" />
        <Constraint
            android:id="@+id/relativeLayout"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/guideline6"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1" />
        <Constraint
            android:id="@+id/email"
            motion:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/guideline2"
            motion:layout_constraintTop_toTopOf="@+id/guideline1"
            motion:layout_constraintStart_toStartOf="@+id/guideline9"
            android:scaleX="1" />
        <Constraint
            android:id="@+id/password"
            motion:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/guideline4"
            motion:layout_constraintTop_toTopOf="@+id/guideline3"
            motion:layout_constraintStart_toStartOf="@+id/guideline9"
            android:scaleX="1" />

        <Constraint
            android:id="@+id/signIn"
            motion:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/guideline6"
            motion:layout_constraintTop_toTopOf="@+id/guideline5"
            motion:layout_constraintStart_toStartOf="@+id/guideline9"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1" />
    </ConstraintSet>
</MotionScene>